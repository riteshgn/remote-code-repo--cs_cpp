/*
* Package Operations:
* -------------------
* - For the Software Repository, Resource is an object which will be versioned
*   and maintainted by the RepoCore.
* - The Repository requires a Store which will be responsible for saving the copy 
*   of a versioned Resource and making it available on a client's request.
* - The IRepoStore interface defined in this pacakage is responsible for laying out
*   the API contract to be provided by such a Repository Store implementation.
*
* Required Files:
* ---------------
* RepoCoreDefinitions.h
*
* Maintenance History:
* --------------------
* ver 1.0 : 24 Feb 2018
* - first release
*/

#ifndef IREPOSTORE_H
#define IREPOSTORE_H

#include "../RepoCore/RepoCoreDefinitions.h"

namespace SoftwareRepository
{
    template <typename T>
    class IRepoStore
    {
    public:
        virtual bool load(T, ResourceVersion, CheckoutLocation) = 0;
        virtual bool save(T, ResourceVersion, SourceLocation) = 0;
    };

}

#endif // !IREPOSTORE_H
